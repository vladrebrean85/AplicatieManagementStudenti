@page
@model AplicatieManagementStudenti.Pages.Studenti.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Nume)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Nume)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Prenume)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Prenume)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.DataInscrierii)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.DataInscrierii)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Inscrieri)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Titlul Cursului</th>
                    <th>Nota</th>
                </tr>
                @foreach (var item in Model.Student.Inscrieri)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Curs.Titlu)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nota)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Student.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
